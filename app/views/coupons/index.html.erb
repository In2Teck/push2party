<h1>Listing coupons</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Image thumb</th>
    <th>Image url</th>
    <th>Visible</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coupons.each do |coupon| %>
  <tr>
    <td><%= coupon.name %></td>
    <td><%= coupon.image_url_thumb %></td>
    <td><%= coupon.image_url %></td>
    <td><%= coupon.visible %></td>
    <td><%= link_to 'Show', coupon %></td>
    <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
    <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

